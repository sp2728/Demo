<div class="wrapper">
    <% include index.ejs%>


    <div class="card shadow">
        <div class="card-header h5 text-uppercase text-center">
            Login
        </div>
        <div class="card-body">
            <form action="/login" method="post">
                <div class="text-danger">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Email" required name="email">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Password" required name="password">
                </div>
                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Login">
                </div>
            </form>

            <div class="form-control">
                If you do not have an account. Please <a href="/signup">sign up</a> here.
            </div>
        </div>
    </div>
</div>